<body style="background-color: #80b8c6;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" id="navid">
      <a href="/"><button type="button" class="btn btn-success mx-2">Home</button></a> 
      
          <h4 style="color: rgb(66, 236, 9);" align="center">Add question</h4>
     
  </nav>
  <div class="container my-2 ">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-lg-8 col-xl-8">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-1">
            <div class="row justify-content-center login ">
              <div class="col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h3 fw-bold mb-1 mx-1 mx-md-2 mt-4" align="center">Add question</p>

                <form class="mx-1" action="/addquestion" method="post">
                  <div class="d-flex flex-row align-items-center mb-4">
                    <label for="exampleInputEmail1">Question:</label>
                    <input type="text" class="form-control" id="exampleInputquestion"  placeholder="Enter question" name="question">
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4 my-5">
                    <label for="exampleInputoption">Option:1-</label>
                    <input type="text" class="form-control" id="exampleInputoption1" name="option1">
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4 my-5">
                    <label for="exampleInputoption">Option:2-</label>
                    <input type="text" class="form-control" id="exampleInputoption2" name="option2">
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4 my-5">
                    <label for="exampleInputoption">Option:3-</label>
                    <input type="text" class="form-control" id="exampleInputoption3" name="option3">
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4 my-5">
                    <label for="exampleInputoption">Option:4-</label>
                    <input type="text" class="form-control" id="exampleInputoption4" name="option4">
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4 my-5">
                  <label for="exampleInputoption">Answer:-</label>
                  <input type="text" class="form-control" id="inputanswer" name="answer">
                  </div>


                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 my-3">
                    <button type="submit" class="btn btn-primary btn-lg" >Add</button>
                  </div>
                </form>

              </div>
              <div class="col-md-5 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                class="img-fluid" height="400px" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
