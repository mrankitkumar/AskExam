<head>
<link rel="stylesheet" href="css/quiz.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script>
       if (qno) {
        window.history.pushState(null, null, window.location.href);
      }
      </script>
      <link rel="icon" type="image/png" href="images/navlogo.png">
</head>
<body style="background-color: #80b8c6;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" id="navid">
        <div class="header">
            <h4 style="color: rgb(66, 236, 9);" align="center">Quiz?</h4>
        </div>
    </nav>
                <div class="box"><h3 id="timer">00:00</h3></div>
        <div class=" question flex mx-4  my-2 q1">
            <form action="/quiz" method="post" class="questioncontent" id="quiz-form" >
                <div class="game-question-container">
                    <h3 id="display-question">
                        <%=qno%>.<%=question.question%>?
                    </h3>
                </div>
                <div class="game-options-container">
                    <div class="my-2">
                        <input type="radio" id="option-one" name="option" class="radio" value="<%=question.option1%>" />
                        <%=question.option1%>
                    </div>
                    <div class="my-2">

                        <input type="radio" id="option-two" name="option" class="radio" value="<%=question.option2%>" />
                        <%=question.option2%>
                    </div>
                    <div class="my-2">

                        <input type="radio" id="option-three" name="option" class="radio"
                            value="<%=question.option3%>" />
                        <%=question.option3%>

                    </div>
                    <div class="my-2">
                        <input type="radio" id="option-four" name="option" class="radio"
                            value="<%=question.option4%>" />
                        <%=question.option4%>
                    </div>
                    <div class="my-2">
                        
                        
                        <%if(qno==5){%>
                            <button type="submit" class="btn btn-success my-2 mx-2">Save and next</button>
                            <a href="/result"><button  type="button" class="btn btn-danger" onclick="suresubmit()">Submit Test</button></a>
                        <%}else{%>
                            <button type="submit" class="btn btn-success my-2 mx-2">Save and next</button>
                            <a href="/result"><button  type="button" class="btn btn-danger" onclick="suresubmit()">Submit Test</button></a>
                
                        <%}%>
                    </div>
                </div>
            </form>
        </div>
        <script src="javascript/quiz.js"></script>
</body>
