<%- include('header');-%>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet" />

    <div class="container rounded bg-white mt-5 mb-5">
        <form action="/updateprofile" method="post" enctype="multipart/form-data" onsubmit="return checkmywall()">
            <div class="row">

                <div class="col-md-4 border-right">
                    <%if(user.profile.data!=null){%>


                        <div class="d-flex flex-column align-items-center text-center p-3 py-3"><img
                                class="rounded-circle mt-5" width="150px"
                                src="data:user.profile/<%=user.profile.contentType %>;base64,<%=user.profile.data.toString('base64')%>"
                                alt="user image"><span class="font-weight-bold">
                                <%=user.name%>
                            </span><span class="text-black-50">
                                <%=user.email%>
                            </span><span> </span>
                        </div>
                        <%}else{%>
                            <div class="d-flex flex-column align-items-center text-center p-3 py-3"><img
                                    class="rounded-circle mt-5" width="150px"
                                    src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-glasses-profile.jpg"
                                    alt="user image"><span class="font-weight-bold">
                                    <%=user.name%>
                                </span><span class="text-black-50">
                                    <%=user.email%>
                                </span><span> </span>
                            </div>
                            <%}%> 
                       <div class="container mx-5">
                            <button type="button" class="btn btn-primary">
                                <label for="photo">Edit Profile
                                    <input type="file" id="photo" name="myimage" style="display: none;">
                                 </label>
                            </button>
                            <button class="btn btn-primary"
                            type="submit" >Save Profile</button>
                        </div>
        </form>
    </div>

    <div class="col-md-5 border-right">
        <form action="/updateuser" method="post" onsubmit="return savedetails()">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile View</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Name:</label><input type="text" class="form-control"
                            name="name" placeholder="name" value="<%=user.name%>"></div>
                    <div class="col-md-6"><label class="labels">SIC:</label><input type="text" class="form-control"
                            name="sic" placeholder="SIC" value="<%=user.sic%>"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Email ID:</label><input type="text"
                            class="form-control" name="email" placeholder="email" value="<%=user.email%>"></div>
                    <div class="col-md-12"><label class="labels">Mobile Number:</label><input type="text"
                            class="form-control" name="phoneno" placeholder="enter phone number"
                            value="<%=user.mobileno%>"></div>
                    <div class="col-md-12"><label class="labels">Address:</label><input type="text" class="form-control"
                            name="address" placeholder="enter address line 1" value="<%=user.address%>"></div>
                    <div class="col-md-12"><label class="labels">College</label><input type="text" class="form-control"
                            name="college" placeholder="college name" value="<%=user.college%>"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Country</label><input type="text" class="form-control"
                            name="country" placeholder="country" value="<%=user.country%>"></div>
                </div>
                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save
                        Details</button></div>
            </div>
    </div>
    </form>
    <div class="col-md-3">
        <div class="p-3 py-5">
            <h4>Your Exam Score</h4>
            <%if(user.score.length==0){%>
                <h5>You have not Given Any test!</h5>
                <%}else{%>

                    <%for(var i=0;i<user.score.length;i++){%>
                        <div class="score">
                            <h5>Your Score in Quiz<%=i+1%> :<%=user.score[i]%>/5</h5>
                        </div>
                        <%}%>
                            <%}%>

        </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    <br>
    <br>
    <script src="javascript/formvalidation.js"></script>

    <%- include('footer');-%>